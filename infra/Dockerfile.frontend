# Dockerfile.frontend

FROM node:20-alpine AS build

WORKDIR /app

# Copy package.json + lock
COPY frontend/package*.json ./
RUN npm install

# Copy source
COPY frontend/ ./

# Build production bundle
RUN npm run build

# Serve static files using a lightweight server
RUN npm install -g serve

EXPOSE 3000
CMD ["serve", "-s", "dist", "-l", "3000"]
